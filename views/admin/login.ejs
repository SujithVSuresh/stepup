<%- include('./header') %>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                  <img src="/static/admin/images/logo.svg">
                </div>
       
                <h6 class="font-weight-light">Sign in to continue.</h6>
                <form class="pt-3" id="login-form">
                  <div class="form-group">
                    <input type="email" class="form-control form-control-lg" id="email" placeholder="Username">
                  </div>
                  <div class="form-group">
                    <input type="password" class="form-control form-control-lg" id="password" placeholder="Password">
                  </div>

                  <input type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">

                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>


    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
    let loginForm = document.getElementById("login-form")

    loginForm.addEventListener('submit', (event) => {
        event.preventDefault()

        let email = document.getElementById("email")
        let password = document.getElementById("password")

        
        let data = {
            email: email.value,
            password: password.value
        }

        axios.post('/admin', data)
            .then((response) => {
                if(response.status == 200){
                    window.location.href = "/admin/dashboard"
                }
            })
            .catch((error) => {
                console.log("it is an error", error)
            })
    })
</script>
