                                        <tr>
                                            <td>
                                                <img id="preview" src="/static/images/<%= item.image %>"
                                                    alt="Image preview" />
                                            </td>

                                            <td>
                                                <%= item.modelName %>
                                            </td>
                                            <td>
                                                <%= item.gender=="men" ? "Men" : item.gender=="women" ? "Women"
                                                    : "Men & Women" %>
                                            </td>
                                            <td>
                                                <%= item.quantity %>
                                            </td>
                                            <td>
                                                <%= item.price %>
                                            </td>
                                            <td>
                                                <%= item.color %>
                                            </td>
                                            <td>
                                                <%= item.size %>
                                            </td>
                                            <td>
                                                <%= item.paymentStatus %>
                                            </td>
                                            <td>
                                                <%= item.orderStatus %>
                                            </td>
                                            <td>
                                                <% if(item.orderStatus!="Cancelled" && item.orderStatus!="Returned"){ %>
                                                <select class="statusChange" item-id="<%= item._id %>" order-id="<%= order._id %>" id="orderItemStatus-<%= item._id %>" name="orderStatus">
                                                    <!-- <option value="pending" <%= item.orderStatus === 'Pending' ? 'selected' : '' %>>Pending</option> -->
                                                    <% if(item.orderStatus=="Pending" ){ %>
                                                        <option value="">Pending</option>
                                                        <option value="Ordered">Ordered</option>
                                                        <option value="Cancelled">Cancel</option>
                                                        <% } %>

                                                            <% if(item.orderStatus=="Ordered" ){ %>
                                                                <option value="">Ordered</option>
                                                                <option value="Shipped">Shipped</option>
                                                                <option value="Cancelled">Cancel</option>
                                                                <% } %>

                                                                    <% if(item.orderStatus=="Shipped" ){ %>
                                                                        <option value="">Shipped</option>
                                                                        <option value="Delivered">Delivered</option>
                                                                        <option value="Cancelled">Cancel</option>
                                                                        <% } %>

                                                                            <% if(item.orderStatus=="Delivered" ){ %>
                                                                                <option value="">Delivered</option>
                                                                                <!-- <option value="Returned">Returned -->
                                                                                </option>
                                                                                <% } %>

                                                </select>
                                                <% } %>
                                            </td>
                                            <td>
                                            </td>
                                        </tr>

                                        <% }) %>



