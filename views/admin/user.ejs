<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>

  document.addEventListener("DOMContentLoaded", (event) => {

    let tableContainer = document.getElementById("table-container")

    tableContainer.innerHTML = ""

    axios.get('/admin/users/data')
            .then((response) => {
              console.log(response.data.users)
                if(response.status == 200){
                    if(response.data.users.length !== 0){
                      response.data.users.forEach((user) => {
                        if(user.isBlocked){
                        tableContainer.innerHTML += `
                        <tr>
                      <td>${user.firstName}</td>
                      <td>${user.lastName}</td>
                      <td>${user.email}</td>
                      <td>${user.phone}</td>
                      <td>${user.dateJoined}</td>
                      <td><label class="badge badge-danger" id="label${user._id}">Blocked</label></td>
                      <td>                   
                      <button data-user-id="${user._id}" id="${user._id}" type="button" class="btn btn-success btn-sm statusBtn">Unblock</button>                   
                    </td>
                    </tr>
                        `;
                  }else{
                    tableContainer.innerHTML += `
                        <tr>
                      <td>${user.firstName}</td>
                      <td>${user.lastName}</td>
                      <td>${user.email}</td>
                      <td>${user.phone}</td>
                      <td>${user.dateJoined}</td>
                      <td><label class="badge badge-danger" id="label${user._id}">Active</label></td>
                      <td>                   
                      <button data-user-id="${user._id}" id="${user._id}" type="button" class="btn btn-primary btn-sm statusBtn">Block</button>                   
                    </td>
                    </tr>
                        `;
                  }

                      })

                    }
                }
            })
            .catch((error) => {
                console.log("it is an error", error)
            })

  })


  document.addEventListener("click", (event) => {

    console.log(event.target.classList.contains("statusBtn"))
    if(event.target && event.target.classList.contains("statusBtn")){
      event.preventDefault();

      const userId = event.target.getAttribute("data-user-id")


      axios.post('/admin/users/data/status', {userId: userId})
            .then((response) => {
                if(response.status == 200){
                    console.log(response.data.isBlocked, "Uioo")
                    if(response.data.isBlocked==false){
                    let statusBtn = document.getElementById(response.data._id)
                    let label = document.getElementById(`label${response.data._id}`)

                    statusBtn.innerText = "Block"
                    statusBtn.classList.add("btn-primary")
                    statusBtn.classList.remove("btn-success")
                    console.log(statusBtn)

                    label.innerText = "Active"
                    }else{
                      let statusBtn = document.getElementById(response.data._id)
                      let label = document.getElementById(`label${response.data._id}`)

                      statusBtn.innerText = "Unblock"
                      statusBtn.classList.add("btn-success")
                      statusBtn.classList.remove("btn-primary")

                      label.innerText = "Blocked"

                    }
                }
            })
            .catch((error) => {
                console.log("it is an error", error)
            })
    }

  })


 



        

</script>
